@model reservationApp.Models.reservationModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="row">
        <div id="mainContent" class="col-md-6 col-md-offset-3">
            <form action="setValues" method="post">
                <div class="form-group col-md-12">
                    <input type="text" class="form-control" name="location" id="location" placeholder="Location">
                </div>

                <div class="col-md-4 form-group">
                    <input type="text" class="form-control" name="chkIn" id="chkIn" placeholder="Check In">
                </div>

                <div class="col-md-4 form-group">
                    <input type="text" name="chkOut" class="form-control" id="chkOut" placeholder="Check Out">
                </div>

                <div class="col-md-4 form-group">
                    <select id="roomQty" name="roomQty" class="form-control" style="width:auto;">
                        <option>Room</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>9</option>
                    </select>
                </div>

                <div id="repeatDiv0">
                    <div class="col-md-4">
                        <label id="roomNumber">Room :</label>
                    </div>
                    <div class="col-md-4 form-group">
                        <select class="form-control" style="width:auto;">
                            <option>Adults:</option>
                            <option>1</option>
                            <option>2</option>
                        </select>
                    </div>
                    <div class="col-md-4 form-group">
                        <select class="form-control" style="width:auto;">
                            <option>Children:</option>
                            <option>1</option>
                            <option>2</option>
                        </select>
                    </div>
                </div>

                <div class="form-group col-md-4 col-md-offset-8 submitBtn">
                    <button id="submitBtn" type="submit" class="btn" style="background-color:darkblue;"
              onclick="location.href='@Url.Action("setValues", "Home")'">Submit</button>
             
                 </div>
            </form>
        </div>
    </div>


</body>
</html>
